<div class="container"
    data-bind="with: searchModel">

  <div class="row">
    <div class="col">
      <div class="input-group">
        <span class="input-group-addon">$</span>
        <input type="text"
                class="form-control"
                placeholder="Budget"
                data-bind="value: request.maxSpend"
        />
      </div>
    </div>

    <div class="col">
      <div class="input-group">
        <input type="text"
                class="form-control"
                placeholder="Budget"
                data-bind="value: request.maxRadius"
        />
        <span class="input-group-addon">mi</span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="input-group input-group-lg">
        <input type="text"
              class="form-control"
              placeholder="Enter your zip code"
              data-bind="value: request.zipCode"
        />

        <span class="input-group-btn">
          <button class="btn btn-secondary"
                  data-bind="click: apiSearch"
          >
            <%= fa_icon "search" %>
          </button>
        </span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <pre data-bind="text: ko.toJSON(response, null, 2)"></pre>
    </div>
  </div>

  <div class="row"
       data-bind="foreach: response">
    <div class="col-sm-4">
      TODO
    </div>
    <div class="col-sm-8">
      <h3 data-bind="text: product_name"></h3>
      <p>from <span data-bind="text: retailer.name"></span> at <span data-bind="text: retailer.address"></span> (<span data-bind="text: formatDistance(retailer.distance)"></span>)</p>
      <p>THC: <span data-bind="text: thc_content"></span>, price: <span data-bind="text: formatCurrency(price_per_gram * suggested_quantity)"></span></p>
    </div>
  </div>

</div>
